using System;
using System.Collections.Generic;

class Program
{
    static List<string> tasks = new List<string>();

    static void Main()
    {
        int option;
        do
        {
            Console.WriteLine("Gerenciador de Tarefas");
            Console.WriteLine("1. Adicionar Tarefa");
            Console.WriteLine("2. Listar Tarefas");
            Console.WriteLine("3. Conluir Tarefa");
            Console.WriteLine("4. Remover Tarefa");
            Console.WriteLine("0. Sair");
            Console.Write("Escolha uma opção: ");

            option = int.Parse(Console.ReadLine());

            switch (option)
            {
                case 1:
                    AddTask();
                    break;
                case 2:
                    ListTask();
                    break;
                case 3:
                    ConcludeTask();
                    break;
                case 4:
                    RemoveTask();
                    break;
                case 0:
                    Console.WriteLine("Saindo do Programa");
                    break;
                default:
                    Console.WriteLine("Opção Inválida");
                    break;
            }
        } while (option != 0);
    }

    static void AddTask()
    {
        Console.Write("Digite a tarefa: "); 
        string description = Console.ReadLine();    
        tasks.Add(description); 
        Console.WriteLine("Tarefa Adicionada");
    }

    static void ListTask()
    {
        Console.WriteLine("Tarefas:");
        for (int i = 0; i < tasks.Count; i++)
        {
            Console.WriteLine($"{i + 1}.{tasks[i]}");
        }
    }

    static void ConcludeTask()
    {
        ListTask();
        Console.Write("Qual tarefa deseja concluir?");
        int index = int.Parse(Console.ReadLine()) - 1;
        if (index >= 0 && index < tasks.Count)
        {
            tasks[index] = "[Concluída] " + tasks[index];
            Console.WriteLine("Tarefa Concluída");
        } 
        else
        {
            Console.WriteLine("Índice Inválido");
        }
    }

    static void RemoveTask()
    {
        ListTask();
        Console.Write("Qual tarefa deseja remover?");
        int index = int.Parse(Console.ReadLine()) - 1;
        if (index <= 0 && index < tasks.Count)
        {
            tasks.RemoveAt(index);
            Console.WriteLine("Tarefa Removida");
        }
        else
        {
            Console.WriteLine("Índice Inválido");
        }
    }
}
